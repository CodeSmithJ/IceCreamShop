@model IEnumerable<IceCreamShop.Models.Customer.CustomerListItem>

@{
    ViewBag.Title = "Index";
}

<h2>Customers</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CustomerId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CustomerName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Payment)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CustomerId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CustomerName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Payment)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.CustomerId }) |
            @Html.ActionLink("Details", "Details", new { id=item.CustomerId }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.CustomerId }) |
            <a href="javascript:newOrder(@Html.Raw(item.CustomerId))">New Order</a>
        </td>
    </tr>
}

</table>
@section scripts {
    <script>
        const id= @Html.Raw(Json.Encode(Model));
        function newOrder(id) {
            window.location.replace("/IceCreamOrder/Create/" + id);
        }
    </script>
    }
