@model IceCreamShop.Models.Shop.ShopDetails

@{
    ViewBag.Title = "Details";
    IEnumerable<IceCreamShop.Models.OrderView.OrderView> orders = (IEnumerable<IceCreamShop.Models.OrderView.OrderView>)ViewBag.Orders;
}

<h2>Details</h2>

<div>
    <h4>ShopDetails</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.IceCreamOrderId)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.IceCreamOrderId)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.TotalPrice)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TotalPrice)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ShopName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ShopName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CreatedUtc)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CreatedUtc)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ModifiedUtc)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ModifiedUtc)
        </dd>

    </dl>
</div>
<div>
    <table border="1">
        <tr><th>Flavor Name</th><th>Flavor Price</th><th>Topping Name</th><th>Topping Price</th><th>Total Price</th><th>Customer Name</th></tr>
        @foreach (var order in orders)
        {

    <tr>
        <td>@order.FlavorName  </td>
        <td align="right">@order.FlavorPriceC2()  </td>
        <td>@order.ToppingName  </td>
        <td align="right">@order.ToppingPriceC2()  </td>
        <td align="right">@order.PriceC2()  </td>
        <td>@order.CustomerName  </td>
    </tr>
        }
    </table>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ShopId }) |
    @Html.ActionLink("Back to List", "Index")
</p>
